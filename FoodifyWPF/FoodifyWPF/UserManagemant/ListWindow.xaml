<Window x:Class="FoodifyWPF.UserManagemant.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodifyWPF.UserManagemant"
        mc:Ignorable="d"
        Title="ListWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <Button Content="Betöltés" Width="60" Padding="5" Margin="5" Click="LoadUser_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgrUserList"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    CanUserSortColumns="False"
                    IsReadOnly="True"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                  Grid.RowSpan="2">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Felhasználónév" 
                                    Binding="{Binding LoginNev}"/>
                <DataGridTextColumn Header="Teljes név" 
                                    Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Email" 
                                    Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Jogosultság" 
                                    Binding="{Binding PermissionId}"/>
                <DataGridTextColumn Header="Aktív" 
                                    Binding="{Binding Active}"/>
            </DataGrid.Columns>
                
        </DataGrid>
    </Grid>
</Window>
